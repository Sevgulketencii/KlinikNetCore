@model List<Blog>


<div class="page-section bg-light">
    <div class="container">
        <h1 class="text-center wow fadeInUp">Son Bloglar</h1>
        <div class="row mt-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 py-2 wow zoomIn">
                    <div class="card-blog">
                        <div class="header">
                            <div class="post-category">
                                <a href="#">@item.BlogEtiket</a>
                            </div>
                            <a href="blog-details.html" class="post-thumb">
                                <img src=@item.BlogImgUrl alt="">
                            </a>
                        </div>
                        <div class="body">
                            <h5 class="post-title"><a href="blog-details.html">@item.BlogBaslik</a></h5>
                            <div class="site-info">
                                <div class="avatar mr-2">
                                    <div >
                                        <span class="mai-time"></span>@item.BlogTarih.ToShortDateString()
                                    </div>
                                   
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            }



            <div class="col-12 text-center mt-4 wow zoomIn">
                <a href="blog.html" class="btn btn-primary">Tüm Haberler</a>
            </div>

        </div>
    </div>
</div>