
@* Yorum Componet div class'ları uyarlanıcak *@

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    <form asp-controller="Blog" asp-action="BlogYorum" method="post" >
        <div>
            <input type="hidden" name="BlogId" value=@ViewBag.id />
        </div>
        <div class="form-row form-group">
            <div class="col-md-6">
                <label for="name">Adınız</label>
                <input type="text" name="YorumAdi" class="form-control" id="name">
            </div>
            <div class="col-md-6">
                <label for="name">Soyadınız</label>
                <input type="text" name="YorumSoyadi" class="form-control" id="name">
            </div>
            <div class="col-md-6">
                <label for="email">E-mail Adresiniz</label>
                <input type="email" name="YorumMail" class="form-control" id="email">
            </div>
        </div>
        <div class="form-group">
            <label for="message">Mesajınız</label>
            <textarea  id="message" name="YorumMetin" cols="30" rows="8" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Gönder" class="btn btn-primary">
        </div>

    </form>
</div><br /><br /><br />
